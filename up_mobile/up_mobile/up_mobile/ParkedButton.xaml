<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="up_mobile.ParkedButton"
             Title="Parking Status">

    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="0,10,0,10">

                <!--Button to take you to the ParkedConfirm page-->
                <Button Text="I Parked"
                        HorizontalOptions="Center"
                        VerticalOptions="CenterAndExpand"
                        Clicked="ParkedButtonPressed"
                        HeightRequest="200"
                        WidthRequest="200"
                        BorderRadius="100"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>

</ContentPage>