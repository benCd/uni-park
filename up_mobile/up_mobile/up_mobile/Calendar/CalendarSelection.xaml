<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="up_mobile.Calendar.CalendarSelection">
    <ContentPage.Content>
        <StackLayout>
            <Label
                Text="Please select the calendar you want us to use!"
                />
            <Label
                x:Name="NotHereLabel"
                Text="If you calendars are not shown here, they are potentially not loaded. Please make sure that you have finished the registration with Google!"
                />
            <StackLayout
                x:Name="CalendarList"/>
            <Button
                Text="Refresh!"
                Clicked="RefreshHandler"
                />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>