<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:up_mobile"
             x:Class="up_mobile.MainPage"
             Title="Home"> <!--This Title is what is displayed at top of page in the app -->

    <StackLayout>
        
        <!--Where the Logo for the app goes-->
        <Label Text="Logo Placeholder"
               Font="Large"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand" />

        <!--Welcome message-->
        <Label Text="Welcome to Uni Park!"
               Font="Large"
               HorizontalOptions="Center" />

        <!--Button to take you to the Log In page-->
        <Button Text="Log In"
                HorizontalOptions="Center"
                Clicked="LoginPage"/> <!--Connects to the LoginPage function in MainPage.xaml.cs when clicked-->

        <!--Text instructing new users to create an account-->
        <Label Text="New user? Create an account below"
               Font="Small"
               HorizontalOptions="Center"/>

        <!--Button to take you to the Register page-->
        <Button Text="Register"
                HorizontalOptions="Center" 
                Clicked="RegisterPage"/> <!--Connects to the RegisterPage function in MainPage.xaml.cs when clicked-->

    </StackLayout>

</ContentPage>
