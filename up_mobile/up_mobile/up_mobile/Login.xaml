<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="up_mobile.Login"
             Title="Log In"> <!--This is what is displayed at top of page in the app -->
    
    <ContentPage.Content>
        
        <StackLayout>
            
            <!--Label that goes above the E-mail entry field-->
            <Label Text="E-mail" />
            
            <!--Entry field for the user's E-mail address-->
            <Entry x:Name="LoginEmail"
                   Placeholder="RealPerson@gmail.com" />

            <!--Label that goes above the Password entry field-->
            <Label Text="Password" />
            
            <!--Entry field for the user's Password-->
            <Entry x:Name="LoginPassword" 
                   Placeholder="Password"
                   IsPassword="true" /> <!--Hides the password as it is typed with black dots-->

            <!--Button for the user to Log In-->
            <Button x:Name="LoginButton" 
                    Text="Log In" 
                    HorizontalOptions="Center" /> <!-- add Clicked="Login_Attempt" -->

        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>