<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="up_mobile.Account"
             Title="Account">

    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="0,10,0,10">
                
                <!--Displays telling the user they are not currently signed into an account-->
                <Label Text="You are not currently logged in." 
                        Font="Medium"
                        HorizontalOptions="Center"/>

                <!--Button to take you to the Log In page-->
                <Button Text="Log In"
                        HorizontalOptions="Center"
                        Clicked="LoginPage"/>

                <!--Text instructing new users to create an account-->
                <Label Text="New user? Create an account below"
                        Font="Small"
                        HorizontalOptions="Center"/>

                <!--Button to take you to the Register page-->
                <Button Text="Register"
                        HorizontalOptions="Center" 
                        Clicked="RegisterPage"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>

</ContentPage>